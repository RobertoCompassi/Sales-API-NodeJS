{
	"name": "sales-api-node",
	"version": "1.0.0",
	"description": "Uma API em NodeJS para caso de estudo da tecnologia.",
	"main": "src/server.js",
	"scripts": {
		"dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/http/server.ts",
		"lint": "eslint . --ext .ts",
		"typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
		"build": "tsc -p .",
		"server-prod": "ts-node -r  tsconfig-paths/register  dist/shared/http/server.js"
	},
	"keywords": [
		"nodejs",
		"sales",
		"api"
	],
	"author": "Roberto Compassi",
	"license": "MIT",
	"dependencies": {
		"bcrypt": "^5.0.0",
		"celebrate": "^13.0.4",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-async-errors": "^3.1.1",
		"pg": "^8.5.1",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.31"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.11",
		"@types/joi": "^17.2.3",
		"@types/node": "^14.14.28",
		"@typescript-eslint/eslint-plugin": "^4.15.1",
		"@typescript-eslint/parser": "^4.15.1",
		"add": "^2.0.6",
		"eslint": "^7.20.0",
		"ts-node-dev": "^1.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.1.5"
	}
